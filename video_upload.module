    VIDEO_UPLOAD_STATUS_DELETE => t('Queued for deletion'),
    VIDEO_UPLOAD_STATUS_BAD => t('Bad'),
    VIDEO_UPLOAD_STATUS_UNKNOWN => t('Unknown'),
